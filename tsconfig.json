{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": [
    "./scripts",
    "./test",
    "./contracts",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}